<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.pygeniusai.desktop</id>
  
  <name>PyGenius AI</name>
  <summary>Python coding assistant with AI-powered features</summary>
  
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  
  <description>
    <p>
      PyGenius AI is a Python coding assistant with AI-powered features to help you learn and write better code.
    </p>
    <p>Features:</p>
    <ul>
      <li>Code editor with syntax highlighting</li>
      <li>Interactive console with Python execution</li>
      <li>AI Tutor powered by OpenRouter (GPT-3.5)</li>
      <li>Code explanation and optimization</li>
      <li>Bug detection and error analysis</li>
      <li>Voice to code (Android only)</li>
      <li>Interactive lessons</li>
    </ul>
    <p>
      All AI features work out of the box with a pre-configured API key. Just install and start coding!
    </p>
  </description>
  
  <launchable type="desktop-id">com.pygeniusai.desktop.desktop</launchable>
  
  <screenshots>
    <screenshot type="default">
      <caption>Code Editor with AI features</caption>
    </screenshot>
  </screenshots>
  
  <url type="homepage">https://github.com/kicicema-web/PyGeniusAI</url>
